<!-- footer start -->
<footer>
  <div class="container">
    <div class="row">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'link_list' %}
            <div class="col-md-4">
              <div class="widget_menu">
                <h3>Menu</h3>
                <ul>
                  {% for link in block.settings.footer_menu.links %}
                    <li>
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</footer>
<!-- footer end -->
